<!doctype html>
<html lang="en" ng-app="myApp">
<head><link rel="stylesheet" href="../stylesheets/about.css"></head>
<% include header %>
<body>
<div class="container mt-5" style="padding: 1%;">
<div class="fondo">
  <div class="card" style="border-style: solid; border-width: 1px; padding: 1%; border-radius: 2.5rem;background-color: white;" >
    <div class="card-body">
      <h3 class="card-title" style="text-align: center;">Perfil de usuario</h5>
      <p id= "editable1" class="card-text">Nombre: <span class="font-weight-bold"><%=user.name %></span></p>
      <p id= "editable2" class="card-text">Apellidos: <span class="font-weight-bold"><%=user.surname %></span></p>
      <p id= "editable3" class="card-text">Correo: <span class="font-weight-bold"><%=user.email %></span></p>
      <!--<p id= "editable4" class="card-text">Contraseña: <span class="font-weight-bold"><%=user.password %></span></p>-->
    </div>
  </div>

  <br>

  <div class="card" style="border-style: solid; border-width: 1px; padding: 1%; border-radius: 2.5rem; background-color: white;">
    <div class="card-body">

      <table class="table">
        <thead >
          <tr>
            <th>Usuario</th>
            <th >Comentario:</th>
            <th>Borrar</th>
          </tr>
        </thead>
    
        <tbody> 
          <% for(var i=0; i<favoritos.length; i++) { %>
          <tr>
            <td> <%= favoritos[i].Usuario %></td>
            <td class="active"> <%= favoritos[i].Comentario %></td>
            <td> 
              <form action="/favoritos/<%= favoritos[i]._id %>" method='POST'>
              <button type="submit" class="btn btn-danger">Eliminar Comentario</button>
              </form>
          </td>
          </tr>
          <% } %>
      </table>
      
      <form class="form-horizontal" action="/favoritos" method='POST'>
        <div class="form-group">
          <label class="control-label col-sm-2" for="pwd">Comentario:</label>
          <div class="col-sm-10">
            <input class="form-control" name="Comentario" placeholder="Introduce Comentario">
          </div>
        </div>
        <div class="form-group" >
          <div class="col-sm-10">
            <input type="hidden" class="form-control" name="Usuario" placeholder="Introduce ID Usuario" value="<%=user.name %>">
          </div>
        </div>
    
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary" style="border-radius: 40%;background-color: #35a666;">Enviar Comentario</button>
          </div>
        </div>
      </form>

    </div>
  </div>

  <br>

  <div class="card" style="border-style: solid; border-width: 1px; padding: 1%; border-radius: 2.5rem; background-color: white;">
    <div class="card-body">
      <form  action="/comentarios" method='POST'>
        <div class="form-group">
          <label for="recommendation" class="card-title">Recomendaciones sobre la Plataforma</label>
          <textarea class="form-control" name="Comentario" rows="2" style="max-width: 100%; min-width: 100%;"></textarea>
        </div>
        <div class="form-group" >
          <div class="col-sm-10">
            <input type="hidden" class="form-control" name="Autor" placeholder="Introduce ID Usuario" value="<%=user.name %>">
          </div>
        </div>
        <button type="submit" class="btn btn-primary" style="border-radius: 40%;background-color: #35a666;">Enviar Recomendación</button>
      </form>
    </div>
  </div>  
</div>
</div>
  </body>  
</html>